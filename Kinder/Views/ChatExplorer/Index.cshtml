<h1>Your Chats:</h1>
<br />
<input type="text" id="criterie" name="fname">
<input type="button" name="search" value="search" onclick="Filtrate();" />
<b id="message"></b>
<input type="button" id="undo" value="Undo" onclick="Undo()" />
<div id="countdown"></div>


<br>
<table class="table" id="chatHubs">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiverID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="tr">
                <td id="ChatName">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiverID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>
                    <!--   <a asp-action="Take" asp-route-id="@item">Take</a> |
                    <a asp-action="Details" asp-route-id="@item">Details</a> |-->

                </td>
            </tr>
            }
        </tbody>

        <input type="button" id="select" value="Select" onclick="Select()" />
        <input type="button" id="delete" value="Delete" onclick="Delete()" display="none" />

    </table>
<script>
        "use strict";


        function Filtrate() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("criterie");

            filter = input.value.toUpperCase();
            table = document.getElementById("chatHubs");

            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[0];
                if (td) {
                    txtValue = td.textContent || td.innerText;


                    let result1 = txtValue.substring(21, txtValue.length).toUpperCase();


                    if (result1.startsWith(filter)) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }

        }

        document.getElementById('delete').style.visibility = 'hidden';
        var status = 0;
        var selected = 0;
        var table = document.getElementById('chatHubs');
        var selected = table.getElementsByClassName('selected');
        table.onclick = highlight;

        function highlight(e) {
            if (status == 1) {
                if (e.target.parentNode.style.backgroundColor == 'green') {
                    e.target.parentNode.style.backgroundColor = 'white';
                    selected -= 1;
                }
                else {
                    e.target.parentNode.style.backgroundColor = 'Green';
                    selected += 1;
                }
                ShowButton();
            }
        }

        function Select() {
            selected = 0;
            var button = document.getElementById('select');
            button.style.backgroundColor = 'Red';
            if (status == 1) {
                status = 0;
                button.style.backgroundColor = 'White';
                for (let row of table.rows) {
                    row.style.backgroundColor = 'White';
                }

            }
            else status += 1;

            ShowButton();
        }

        function ShowButton() {
            var button = document.getElementById('delete');
            if (selected > 0) {
                button.style.visibility = 'visible';
            }
            else button.style.visibility = 'hidden';

        }

        var UndoPressed = 0;
        var timeleft = 10;
        function Delete() {
            DeleteFR();
            var textfield = document.getElementById('message');
            var undoButt = document.getElementById('undo');
            textfield.innerHTML = "Soon your " + selected + " chatHubs will be deleted";
            textfield.style.visibility = 'visible';
            undoButt.style.visibility = 'visible';
            undoButt.disabled = false;
            timeleft = 10;
            UndoPressed = 0;

            var downloadTimer = setInterval(function () {
                if (timeleft <= 0) {
                    clearInterval(downloadTimer);
                    document.getElementById("countdown").innerHTML = "";

                    textfield.style.visibility = 'hidden';
                    undoButt.style.visibility = 'hidden';
                    undoButt.disabled = true

                } else {
                    document.getElementById("countdown").innerHTML = timeleft + " seconds remaining";
                }
                timeleft -= 1;
            }, 1000);



        }
        function Undo() {
            UndoPressed = 1;
            timeleft = 0;
        }

