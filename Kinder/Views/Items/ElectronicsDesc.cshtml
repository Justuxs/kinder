@model kinder_app.Models.ElectronicsItem

@{
    ViewData["Title"] = "ElectronicsDesc";
}

<h1>Add Description</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ElectronicsDesc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfPurchase" class="control-label"></label>
                <input asp-for="DateOfPurchase" class="form-control" />
                <span asp-validation-for="DateOfPurchase" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Condition" class="control-label"></label>
                <select asp-for="Condition" class="form-control" asp-items="Html.GetEnumSelectList<ConditionEnum>()"></select>
                <span asp-validation-for="Condition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tag" class="control-label"></label>
                <select asp-for="Tag" class="form-control" asp-items="Html.GetEnumSelectList<ElectronicsTags>()"></select>
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NSFW" class="control-label"></label>
                <p>
                    @Html.CheckBoxFor(m => m.NSFW)
                </p>
            </div>

            <div class="form-group">
                <label asp-for="State" , class="control-label">Visibility<br></label>
                <p>
                    Private
                    @Html.RadioButtonFor(m => m.State, false) |
                    Public
                    @Html.RadioButtonFor(m => m.State, true)
                </p>

            </div>

            <div class="form-group">
                <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("SelectCategory", "Items" )'" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
